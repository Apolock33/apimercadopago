generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pedidos {
  id            BigInt   @id
  status        String?
  idPagamento   String?
  valorTotal    Decimal? @db.Decimal(18, 2)
  valorPago     Decimal? @db.Decimal(18, 2)
  idComprador   BigInt?
  nomeComprador String?
  idVendedor    BigInt?
  itensPedidos  Json?
  raw_json      Json?
  criadoEm      DateTime @default(now())
  atualizadoEm  DateTime @updatedAt

  @@index([idVendedor])
  @@index([idComprador])
  @@index([status])
}
